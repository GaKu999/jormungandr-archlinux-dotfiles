#!/bin/sh
# vim:ft=sh:noet:ts=3:sw=3:
# file:$XDG_BIN_DIR/.overrides/gamescope
#==============================================================================#


export DRI_PRIME="pci-0000_03_00_0"
exec /usr/bin/gamescope -f -C3000 -w1280 -h720 -r165 -Sauto -Ffsr --backend=sdl --force-windows-fullscreen --adaptive-sync "$@" 2>/dev/null


